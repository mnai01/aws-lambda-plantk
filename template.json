{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "plantk",
  "Transform": ["AWS::Serverless-2016-10-31"],
  "Parameters": {
    "RapidParam": {
      "Type": "String",
      "Description": "RapidAPI key"
    }
  },
  "Resources": {
    "RapidApiGateway": {
      "Type": "AWS::Serverless::Api",
      "Properties": {
        "OpenApiVersion": "3.0.1",
        "StageName": { "Ref": "AWS::StackName" },
        "MethodSettings": [
          { "HttpMethod": "*", "ResourcePath": "/*", "ThrottlingRateLimit": 10, "ThrottlingBurstLimit": 10 }
        ],
        "Auth": {
          "DefaultAuthorizer": "RapidAuthorizer",
          "Authorizers": {
            "RapidAuthorizer": {
              "FunctionArn": { "Fn::GetAtt": ["RapidAuthFunction", "Arn"] },
              "FunctionPayloadType": "REQUEST",
              "Identity": {
                "Headers": ["X-RapidAPI-Proxy-Secret"]
              }
            }
          }
        }
      }
    },
    "getAllItemsFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "src/handlers/get-all-items.getAllItemsHandler",
        "Runtime": "nodejs14.x",
        "Architectures": ["x86_64"],
        "MemorySize": 128,
        "Timeout": 100,
        "Description": "A simple example includes a HTTP get method to get all items from a DynamoDB table.",
        "Policies": [
          {
            "DynamoDBCrudPolicy": {
              "TableName": {
                "Ref": "HousePlantsTable"
              }
            }
          }
        ],
        "Environment": {
          "Variables": {
            "HOUSE_PLANTS_TABLE": {
              "Ref": "HousePlantsTable"
            }
          }
        },
        "Events": {
          "Api": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "RapidApiGateway" },
              "Path": "/all",
              "Method": "GET"
            }
          }
        }
      }
    },
    "getAllItemsLiteFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "src/handlers/get-all-items-lite.getAllItemsLiteHandler",
        "Runtime": "nodejs14.x",
        "Architectures": ["x86_64"],
        "MemorySize": 128,
        "Timeout": 100,
        "Description": "A simple example includes a HTTP get method to get all items from a DynamoDB table.",
        "Policies": [
          {
            "DynamoDBCrudPolicy": {
              "TableName": {
                "Ref": "HousePlantsTable"
              }
            }
          }
        ],
        "Environment": {
          "Variables": {
            "HOUSE_PLANTS_TABLE": {
              "Ref": "HousePlantsTable"
            }
          }
        },
        "Events": {
          "Api": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "RapidApiGateway" },
              "Path": "/all-lite",
              "Method": "GET"
            }
          }
        }
      }
    },
    "postAllSearchedItemsFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Layers": [{ "Ref": "NodeModulesLayer" }],
        "Handler": "src/handlers/post-all-searched-items.postAllSearchedItemsHandler",
        "Runtime": "nodejs14.x",
        "Architectures": ["x86_64"],
        "MemorySize": 128,
        "Timeout": 100,
        "Description": "A simple example includes a HTTP post method to get all items from a DynamoDB table.",
        "Policies": [
          {
            "DynamoDBCrudPolicy": {
              "TableName": {
                "Ref": "HousePlantsTable"
              }
            }
          }
        ],
        "Environment": {
          "Variables": {
            "HOUSE_PLANTS_TABLE": {
              "Ref": "HousePlantsTable"
            }
          }
        },
        "Events": {
          "Api": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "RapidApiGateway" },
              "Path": "/search",
              "Method": "POST"
            }
          }
        }
      }
    },
    "getByIdFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "src/handlers/get-by-id.getByIdHandler",
        "Runtime": "nodejs14.x",
        "Architectures": ["x86_64"],
        "MemorySize": 128,
        "Timeout": 100,
        "Description": "A simple example includes a HTTP get method to get one item by id from a DynamoDB table.",
        "Policies": [
          {
            "DynamoDBCrudPolicy": {
              "TableName": {
                "Ref": "HousePlantsTable"
              }
            }
          }
        ],
        "Environment": {
          "Variables": {
            "HOUSE_PLANTS_TABLE": {
              "Ref": "HousePlantsTable"
            }
          }
        },
        "Events": {
          "Api": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "RapidApiGateway" },
              "Path": "/id/{id}",
              "Method": "GET"
            }
          }
        }
      }
    },
    "getByCategoryFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "src/handlers/get-by-category.getByCategoryHandler",
        "Runtime": "nodejs14.x",
        "Architectures": ["x86_64"],
        "MemorySize": 128,
        "Timeout": 100,
        "Description": "A simple example includes a HTTP get method to get one item by id from a DynamoDB table.",
        "Policies": [
          {
            "DynamoDBCrudPolicy": {
              "TableName": {
                "Ref": "HousePlantsTable"
              }
            }
          }
        ],
        "Environment": {
          "Variables": {
            "HOUSE_PLANTS_TABLE": {
              "Ref": "HousePlantsTable"
            }
          }
        },
        "Events": {
          "Api": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "RapidApiGateway" },
              "Path": "/category/{category}",
              "Method": "GET"
            }
          }
        }
      }
    },
    "getAllCategoriesFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "src/handlers/get-all-categories.getAllCategoriesHandler",
        "Runtime": "nodejs14.x",
        "Architectures": ["x86_64"],
        "MemorySize": 128,
        "Timeout": 100,
        "Description": "A simple example includes a HTTP get method to get one item by id from a DynamoDB table.",
        "Policies": [
          {
            "DynamoDBCrudPolicy": {
              "TableName": {
                "Ref": "HousePlantsTable"
              }
            }
          }
        ],
        "Environment": {
          "Variables": {
            "HOUSE_PLANTS_TABLE": {
              "Ref": "HousePlantsTable"
            }
          }
        },
        "Events": {
          "Api": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "RapidApiGateway" },
              "Path": "/categories",
              "Method": "GET"
            }
          }
        }
      }
    },
    "NodeModulesLayer": {
      "Type": "AWS::Serverless::LayerVersion",
      "Properties": {
        "LayerName": "house-plant-layers",
        "Description": "Layer that will be shared across multiple microservices",
        "LicenseInfo": "Available under the MIT license.",
        "ContentUri": "./layers",
        "CompatibleRuntimes": ["nodejs14.x"]
      }
    },
    "HousePlantsTable": {
      "Type": "AWS::Serverless::SimpleTable",
      "Properties": {
        "PrimaryKey": {
          "Name": "id",
          "Type": "String"
        },
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 2,
          "WriteCapacityUnits": 2
        }
      }
    },
    "HousePlantRapidSecretParam": {
      "Type": "AWS::SSM::Parameter",
      "Properties": {
        "Name": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "AWS::StackName"
              },
              "param"
            ]
          ]
        },
        "Description": "Parameter from AWS Parameter Store that keeps API secure from outside calls",
        "Type": "String",
        "Value": { "Ref": "RapidParam" }
      }
    },
    "RapidAuthFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Role": { "Fn::GetAtt": ["HousePlantParameterStoreIAMRole", "Arn"] },
        "Handler": "src/authorizer/handler.authorizer",
        "Runtime": "nodejs14.x",
        "Architectures": ["x86_64"],
        "MemorySize": 128,
        "Timeout": 100,
        "Description": "Authenticator for API gateway, this gets ran before ever API call",
        "Environment": {
          "Variables": {
            "RAPID_PARAM_ID": { "Ref": "HousePlantRapidSecretParam" }
          }
        }
      }
    },
    "HousePlantParameterStoreIAMRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              }
            }
          ]
        },
        "Path": "/",
        "ManagedPolicyArns": ["arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"],
        "Policies": [
          {
            "PolicyName": "SSMGetParameter",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": "ssm:GetParameter",
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "WebEndpoint": {
      "Description": "API Gateway endpoint URL for Prod stage",
      "Value": {
        "Fn::Sub": "https://${RapidApiGateway}.execute-api.${AWS::Region}.amazonaws.com/Prod/"
      }
    }
  }
}
